{
  "swagger": "2.0",
  "info": {
    "title": "NBA Momentum Visualization API",
    "description": "NBA Momentum Visualization Endpoints",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/api/pace/{year}": {
      "get": {
        "description": "Fetch NBA pace for a given season",
        "parameters": [
          {
            "name": "year",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Season pace data for every team and league average."
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/nba_season/{year}": {
      "get": {
        "description": "Fetch NBA data for a given year",
        "parameters": [
          {
            "name": "year",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "List of games in NBA season."
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}