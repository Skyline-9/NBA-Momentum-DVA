{
  "swagger": "2.0",
  "info": {
    "title": "NBA Momentum Visualization API",
    "description": "NBA Momentum Visualization Endpoints",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/fetch-nba-data/{year}": {
      "get": {
        "description": "Fetch NBA data for a given year",
        "parameters": [
          {
            "name": "year",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "List of games in NBA season."
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}